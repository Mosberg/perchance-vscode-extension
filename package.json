{
  "name": "perchance-vscode-extension",
  "displayName": "Perchance for VSCode",
  "description": "VSCode extension for Perchance.org generators",
  "version": "0.1.0",
  "publisher": "Mosberg",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mosberg/perchance-vscode-extension"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "files": [
    "out/**",
    "server/**",
    "data/**",
    "snippets/**",
    "syntaxes/**",
    "language-configuration.json",
    "README.md",
    "LICENSE.txt",
    "package.json",
    "node_modules/**"
  ],
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "npm run compile -w client && npm run compile -w server",
    "watch": "npm run watch -w client && npm run watch -w server",
    "lint": "npm run lint -w client && npm run lint -w server",
    "lint:full": "npm run lint:full -w client && npm run lint:full -w server",
    "data:check": "node scripts/validate-data.js",
    "data:sort": "node scripts/sort-data.js",
    "test": "npm test -w client",
    "package:vsix": "node scripts/package-vsce.js"
  }
}
